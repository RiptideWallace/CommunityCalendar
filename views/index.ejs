<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head.ejs %>
    <title>
      Victoria Community Calendar
    </title>
  </head>

  <body class="home-page-body">

    <% include partials/_header.ejs %>

    <div class="container">

      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <div class="btn-group dropdown-nav">
            <button type="button" class="btn btn-block btn-lg btn-success dropdown-button dropdown-toggle" data-toggle="dropdown">
              Choose a Region <span class="caret"></span>
            </button>
            <ul class="dropdown-content dropdown-menu scrollable-menu" role="menu">
            <% region.forEach(function(r) { %>
              <li class="dropdown-item"><a href="/BC/<%=r.region_slug%>"><%=r.region_name%></a></li>
            <% } ) %>
            </ul>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
          <div class="btn-group dropdown-nav">
            <button type="button" class="btn btn-block btn-lg btn-success dropdown-button dropdown-toggle" data-toggle="dropdown">
              Choose a Centre <span class="caret"></span>
            </button>
            <ul class="dropdown-content dropdown-menu scrollable-menu" role="menu">
            <% place.forEach(function(p) { %>
              <li class="dropdown-item"><a href="/BC/<%=p.region_slug%>/<%=p.place_slug%>"><%=p.place_name%></a></li>
            <% } ) %>
            </ul>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
          <div class="btn-group dropdown-nav">
            <button type="button" class="btn btn-block btn-lg btn-success dropdown-button dropdown-toggle" data-toggle="dropdown">
              Choose a Price Range <span class="caret"></span>
            </button>
            <ul class="dropdown-content dropdown-menu scrollable-menu" role="menu">
              <li class="dropdown-item"><a href="/price/0">Free!</a></li>
              <li class="dropdown-item"><a href="/price/1">Less than &#36;10</a></li>
              <li class="dropdown-item"><a href="/price/2">&#36;10 and up</a></li>
              <li class="dropdown-item"><a href="/price/3">&#36;100 and up</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="well well-icon-text">
            <span class="text-center">
              <i class="fa fa-calendar fa-2x calendar-icon" aria-hidden="true"></i>
            </span>
            <hr>
            <p><strong>Community Calendar</strong> is your Greater Victoria event guide. Find activities by region, centre, and price range.</p>
            <% if (!userId) { %>
              <p><a href="/user/register">Register</a> or <a href="/user/login">login</a> to save events you're interested in and keep track of what's happening at your favourite places.</p>
            <% } else { %>
              <p>Use Community Calendar to save events you're interested in and keep track of what's happening at your favourite places.</p>
            <% } %>
          </div>
        </div>
      </div>

    </div>

    <% include partials/_footer.ejs %>

  </body>
</html>
