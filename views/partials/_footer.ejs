<!-- views/partials/_footer.ejs -->

<footer class="footer">
  <% if (userId) { %>
    <div class="footer-link">
      <a href="/">Home</a> -
      <a href="/users/<%= userId %>/show">User Profile</a> -
      <form class="footer-logout" action="/logout" method="POST">
        <input type="submit" value="Logout" class="btn btn-link">
      </form>
    </div>
      <p class="footer-company-name">Victoria Community Calendar</p>
  <% } else { %>
    <div class="footer-link">
      <a href="/">Home</a> -
      <a href="/register">Register</a> -
      <a href="/login">Login</a>
    </div>
    <p class="footer-company-name">Victoria Community Calendar</p>
  <% } %>
</footer>
